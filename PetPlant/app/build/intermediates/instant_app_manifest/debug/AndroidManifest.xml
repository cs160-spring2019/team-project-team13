<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petplant"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 获取Camera权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hradware.camera" />
    <uses-permission android:name="android.hradware.camera.autofocus" />

    <application
        android:name="com.example.petplant.scanDiseases.CameraDemoApp"
        android:allowBackup="false"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.petplant.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.petplant.camera.view.TakePhotoActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.petplant.camera.view.DiseaseActivity"
            android:label="Disease" >
        </activity>
        <activity
            android:name="com.example.petplant.Experts.ExpertMain"
            android:label="expert_main"
            android:theme="@style/StartTheme" />
        <activity
            android:name="com.example.petplant.reminders.calendar"
            android:label="@string/title_activity_calendar" />
        <activity
            android:name="com.example.petplant.reminders.reminders"
            android:label="@string/title_activity_reminders"
            android:theme="@style/StartTheme" />
        <activity
            android:name="com.example.petplant.reminders.CreateEditReminder"
            android:label="@string/title_activity_createedit"
            android:theme="@style/StartTheme" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.petplant.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>