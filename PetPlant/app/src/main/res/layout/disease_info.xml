<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/topBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_app_bar_2" />

    <ImageView
        android:id="@+id/back2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_00"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/disease_info"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12.5dp"
        android:layout_marginLeft="80dp"
        android:text="Disease Info" />

    <ImageView
        android:id="@+id/thumb_up"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="300dp"
        android:background="@color/color_00"
        android:src="@drawable/ic_thumb_up" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="340dp"
        android:background="@color/color_00"
        android:src="@drawable/ic_star" />

    <ImageView
        android:id="@+id/more_vert"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="375dp"
        android:background="@color/color_00"
        android:src="@drawable/ic_more_vert" />

    <ImageView
        android:id="@+id/disease_img"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="115dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="50dp"
        android:text="Name:" />

    <TextView
        android:id="@+id/name_content"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="180dp"
        android:text="Bacterial Blight" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="55dp"
        android:background="@drawable/ic_line" />

    <TextView
        android:id="@+id/cause"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#8fd52d"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="50dp"
        android:text="What Causes It" />

    <TextView
        android:id="@+id/cause_content"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal"
        android:typeface="normal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="50dp"
        android:text="Cool, wet weather" />

    <TextView
        android:id="@+id/looks"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#8fd52d"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="50dp"
        android:text="What It Looks Like" />

    <TextView
        android:id="@+id/looks_content"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal"
        android:typeface="normal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="50dp"
        android:text="Large, yellow spots on leaves that eventually turn brown" />

    <TextView
        android:id="@+id/action"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#8fd52d"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="50dp"
        android:text="What You Can Do" />

    <TextView
        android:id="@+id/action_content"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal"
        android:typeface="normal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="50dp"
        android:text="Remove infected plants and ensure proper spacing between them" />

</FrameLayout>